# NVDA Solo - Configuration rendement maximum
HYPRL_LIVE_ENABLED=true
HYPRL_CONFIG=configs/NVDA-1h_v3.yaml

# Capital et risque
HYPRL_CAPITAL=10000  # Ajuster selon votre capital réel
HYPRL_RISK_BASE_PCT=0.01  # 1% base (Kelly ajustera dynamiquement)

# Kelly dynamique (multiplicateur agressif validé)
HYPRL_KELLY_ENABLED=true
HYPRL_KELLY_MIN_MULT=0.5   # Min 0.5% (protection drawdown)
HYPRL_KELLY_MAX_MULT=4.0   # Max 4% (capture upside)
HYPRL_KELLY_LOOKBACK=50

# Trailing stop (clé pour 79.7% exits gagnants)
HYPRL_TRAILING_ENABLED=true
HYPRL_TRAILING_ACTIVATION=1.0
HYPRL_TRAILING_DISTANCE=0.04

# Guards (sécurité)
HYPRL_GUARD_MAX_DD=15.0      # Stop si DD > 15%
HYPRL_GUARD_MIN_PF=1.2       # Alert si PF < 1.2
HYPRL_GUARD_MAX_CONSEC_LOSS=8

# Limites position
HYPRL_MAX_NOTIONAL_PCT=10.0
HYPRL_MAX_DAILY_TRADES=5
