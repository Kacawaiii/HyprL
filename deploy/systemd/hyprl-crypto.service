[Unit]
Description=HyprL Crypto Signal Generator (24/7)
After=network.target

[Service]
Type=oneshot
User=ubuntu
WorkingDirectory=/home/ubuntu/HyprL
ExecStart=/bin/bash /home/ubuntu/HyprL/scripts/ops/run_crypto_signals.sh
StandardOutput=journal
StandardError=journal
SyslogIdentifier=hyprl-crypto

[Install]
WantedBy=multi-user.target
